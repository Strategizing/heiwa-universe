{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Operator Scheduler Drift Report v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "generated_at",
    "severity",
    "summary",
    "items"
  ],
  "properties": {
    "schema_version": {
      "const": "heiwa_scheduler_drift_report_v1"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "severity": {
      "type": "string",
      "enum": [
        "ok",
        "warn",
        "degraded"
      ]
    },
    "summary": {
      "type": "object",
      "additionalProperties": true
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  }
}
