{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Operator Adapter Registry v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "generated_at",
    "adapters"
  ],
  "properties": {
    "schema_version": {
      "const": "heiwa_adapter_registry_v1"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "adapters": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  }
}
