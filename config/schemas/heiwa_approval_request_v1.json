{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Operator Approval Request v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "approval_id",
    "request_id",
    "created_at",
    "status",
    "required_fields"
  ],
  "properties": {
    "schema_version": {
      "const": "heiwa_approval_request_v1"
    },
    "approval_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "approved",
        "denied"
      ]
    },
    "required_fields": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
