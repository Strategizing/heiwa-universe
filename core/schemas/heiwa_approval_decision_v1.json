{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Operator Approval Decision v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "decision_id",
    "request_id",
    "approval_id",
    "decision",
    "decided_at"
  ],
  "properties": {
    "schema_version": {
      "const": "heiwa_approval_decision_v1"
    },
    "decision_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "approval_id": {
      "type": "string"
    },
    "decision": {
      "type": "string",
      "enum": [
        "approve",
        "deny"
      ]
    },
    "decided_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
