{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Heiwa Workflow Event v2",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "event_id",
    "timestamp",
    "brand",
    "profile_id",
    "workspace",
    "workflow_name",
    "step_name",
    "tool_family",
    "command",
    "mode",
    "status",
    "duration_ms",
    "target_refs",
    "risk_level",
    "approval_required",
    "approval_ref",
    "redaction_applied",
    "summary",
    "artifacts",
    "canon_version",
    "repo_contract_version",
    "state_root",
    "decision_ref"
  ],
  "properties": {
    "schema_version": { "const": "workflow_event_v2" },
    "event_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "brand": { "type": "string" },
    "profile_id": { "type": "string" },
    "workspace": { "type": "string" },
    "workflow_name": { "type": "string" },
    "step_name": { "type": "string" },
    "tool_family": { "type": "string" },
    "command": { "type": "string" },
    "mode": { "type": "string" },
    "status": { "type": "string" },
    "duration_ms": { "type": "integer", "minimum": 0 },
    "target_refs": { "type": "array", "items": { "type": "string" } },
    "risk_level": { "type": "string" },
    "approval_required": { "type": "boolean" },
    "approval_ref": { "type": ["string", "null"] },
    "redaction_applied": { "type": "boolean" },
    "summary": { "type": "string" },
    "artifacts": { "type": "array", "items": { "type": "string" } },
    "canon_version": { "type": ["string", "null"] },
    "repo_contract_version": { "type": ["string", "null"] },
    "state_root": { "type": "string" },
    "decision_ref": { "type": ["string", "null"] }
  }
}
