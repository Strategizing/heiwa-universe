{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Heiwa Capability Registry v2",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "generated_at", "capabilities"],
  "properties": {
    "schema_version": { "const": "capability_registry_v2" },
    "generated_at": { "type": "string", "format": "date-time" },
    "profile_id": { "type": "string" },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["capability_id", "surface", "mode", "risk_level"],
        "properties": {
          "capability_id": { "type": "string" },
          "surface": { "type": "string" },
          "mode": { "type": "string" },
          "risk_level": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "approval_required": { "type": "boolean" },
          "allowed_in": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
