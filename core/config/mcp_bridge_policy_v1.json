{
  "bridge_version": "heiwa_mcp_bridge_v1",
  "transport": "docker_mcp_tools_cli",
  "catalog_ttl_sec": 30,
  "catalog_timeout_sec": 25,
  "server_catalog_ttl_sec": 60,
  "server_catalog_timeout_sec": 10,
  "default_timeout_sec": 60,
  "max_timeout_sec": 180,
  "max_request_bytes": 65536,
  "max_result_chars": 200000,
  "servers": {
    "MCP_DOCKER": {
      "enabled": true,
      "server_slug": "desktop-commander",
      "deny_by_default": true,
      "allowed_tools": {
        "get_config": {"read_only": true, "timeout_sec": 20},
        "get_usage_stats": {"read_only": true, "timeout_sec": 20},
        "get_current_time": {"read_only": true, "timeout_sec": 15},
        "convert_time": {"read_only": true, "timeout_sec": 15}
      }
    },
    "playwright": {
      "enabled": true,
      "server_slug": "playwright",
      "deny_by_default": true,
      "allowed_tools": {
        "browser_navigate": {"read_only": true, "timeout_sec": 45},
        "browser_snapshot": {"read_only": true, "timeout_sec": 45},
        "browser_take_screenshot": {"read_only": true, "timeout_sec": 60},
        "browser_console_messages": {"read_only": true, "timeout_sec": 30},
        "browser_network_requests": {"read_only": true, "timeout_sec": 30},
        "browser_wait_for": {"read_only": true, "timeout_sec": 45},
        "browser_tabs": {"read_only": true, "timeout_sec": 20},
        "browser_close": {"read_only": true, "timeout_sec": 20}
      }
    }
  }
}
