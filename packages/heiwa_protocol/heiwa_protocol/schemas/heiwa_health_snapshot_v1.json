{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Operator Health Snapshot v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "generated_at",
    "host",
    "adapters",
    "overall_status"
  ],
  "properties": {
    "schema_version": {
      "const": "heiwa_health_snapshot_v1"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "host": {
      "type": "object",
      "additionalProperties": true
    },
    "adapters": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "overall_status": {
      "type": "string"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
