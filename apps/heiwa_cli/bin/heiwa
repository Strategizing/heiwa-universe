#!/usr/bin/env node
const { spawn } = require('child_process');
const path = require('path');

const pythonScript = path.join(__dirname, '../heiwa');
const args = process.argv.slice(2);

const child = spawn(pythonScript, args, {
  stdio: 'inherit',
  env: process.env
});

child.on('exit', (code) => {
  process.exit(code);
});
